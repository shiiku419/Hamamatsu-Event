<section class="login py-5 border-top-1">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-5 col-md-8 align-item-center">
        <div class="border">
          <h3 class="bg-gray p-4">Login Now</h3>
          <%= form_with(url: login_path, local: true) do |form| %>
            <fieldset class="p-4">
              <%= form.text_field :name, class: 'form-control mb-3', placeholder: 'Username', required: true %>
              <%= form.password_field :password, class: 'form-control mb-3', placeholder: 'Password', required: true %>
              <div class="loggedin-forgot">
                <%= form.check_box :remember_me, id: 'keep-me-logged-in' %>
                <%= form.label :remember_me, 'Keep me logged in', class: 'pt-3 pb-2' %>
              </div>
              <%= form.submit 'Log in', class: 'btn btn-primary font-weight-bold mt-3' %>
              <%= link_to 'Register Now', '/register', class: 'mt-3 d-block text-primary' %>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
