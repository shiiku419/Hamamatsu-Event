<% if logged_in? %>
  <% if post.favorited_by?(current_user) %>
    <%= button_to post_favorites_path(post), method: :delete do %>
      <span style="color:red;">❤︎</span></i>
      <%= post.favorites.length %>
    <% end %>
  <% else %>
    <%= button_to post_favorites_path(post), method: :post do %>
      <span style="color:red;">❤︎</span></i>
      <%= post.favorites.length %> 
    <% end %>
  <% end %>
<% end %>
